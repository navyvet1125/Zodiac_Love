<h1>Messages</h1>
<div class="panel panel-default  col-md-6">
  <div class="panel-heading">
    <h2>Account Info</h2>
  </div>
  <div class="panel-body"id="account_info">

<%= form_for @user, url: {action: "update"} do |f| %>
  <div class="form-group">
    <%= f.label :first_name, nil, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :first_name, :placeholder => "ex: John", :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :last_name, nil, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, :placeholder => "ex: Smith", :class => "form-control" %>
    </div>
  </div>
 
  <br/>
  <div class="form-group">
    <%= f.label :user_name, nil, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :user_name, :placeholder => "ex: JohnSmith79", :class => "form-control" %>
    </div>
  </div>
  
  <br/>
  <div class="form-group">
    <%= f.label :email, nil, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :email, :placeholder => "ex: John@Smith.com", :class => "form-control" %>
    </div>
  </div>
  
  <br/>
 <%= f.submit :class => "btn btn-success" %>
<%= link_to "Delete my profile!", 'users/destroy', method: :delete, data:{ confirm: 'Are you sure?'}, :class => "btn btn-danger" %>

<% end %>
</div>
</div>
<div class="panel panel-default col-md-6">
  <div class="panel-heading">
    <h2 >Profile info</h2>
  </div>
<div class="form-group">
  
  	 <% if @user.image.url(:large).to_s !="/images/large/missing.png" %>
    <%= image_tag @user.image.url(:large)  %>
  <% else %>
    <p style="font-size: 7em;"><%= @user.sun_sign.symbol %></p>
  <% end %>
  <%= form_for @user, url: {action: "update"} do |f| %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.label :born_on %>
  <%= f.date_field :born_on %>
  <br/>
  <%= f.label "I'm a: " %>
  <%= f.select(:gender) do %>
	  <% [
	  		['It doesn\'t matter','Doesn\'t Matter'],
	  		['Male','Male'],
	  		['Female','Female'], 
	  		['Transgender', 'Transgender'],
	  		['Other','Other']
	  	].each do |c| -%>
	    <%= content_tag(:option, c.first, value: c.last) %>
	  <% end %>
  <% end %>
  <br/>
  <%= f.label "Seeking a: " %>
  <%= f.select(:desired_gender) do %>
	  <% [
	  		['It doesn\'t matter','Doesn\'t Matter'],
	  		['Male','Male'],
	  		['Female','Female'], 
	  		['Transgender', 'Transgender'],
	  		['Other','Other']
	  	].each do |c| -%>
	    <%= content_tag(:option, c.first, value: c.last) %>
	  <% end %>
  <% end %>
  <br/>
  <%= f.label :zip_code %>
  <%= f.number_field :zip_code, options = {:min =>501, :max=>99950, :placeholder =>"90305"} %>
  <br/>
  <%= f.label "Height" %>
  <%= f.number_field :height_feet, options = {:min =>1, :max=>8, :placeholder =>"5"} %>
  <%=  "ft." %>
  <%= f.number_field :height_inches, options = {:min =>0, :max=>11, :placeholder =>"9"} %>
  <%=  "in." %>
  <br/>
  <%= f.label "Title" %>
  <%= f.text_field :profile_title %>
  
  <br/>
  <%= f.label "info"%>
  <br/>
  <%= f.text_area :profile_info , :class => "form-control input-md" %>
  <br/>
  <%= f.submit %>
</div>
</div>
<% end %>
