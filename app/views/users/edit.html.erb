<h1  id="account_info">Account and Profile</h1>
<div class="panel panel-default row">
  <div class="panel-heading">
    <h2>Account Info</h2>
  </div>
  <div class="panel-body">
    <%= form_for @user, url: {action: "update"} do |f| %>
      <div class="form-group row">
        <%= f.label :first_name, nil, :class => 'col-sm-offset-2 col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= f.text_field :first_name, :placeholder => "ex: John", :class => "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :last_name, nil, :class => 'col-sm-offset-2 col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= f.text_field :last_name, :placeholder => "ex: Smith", :class => "form-control" %>
        </div>
      </div>
   
      <div class="form-group row">
        <%= f.label :user_name, nil, :class => 'col-sm-offset-2 col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= f.text_field :user_name, :placeholder => "ex: JohnSmith79", :class => "form-control" %>
        </div>
      </div>
    
      <div class="form-group row">
        <%= f.label :email, nil, :class => 'col-sm-offset-2 col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= f.text_field :email, :placeholder => "ex: John@Smith.com", :class => "form-control" %>
        </div>
      </div>
    
      <div class="col-sm-offset-4 col-sm-6 row">
        <%= f.submit :class => "btn btn-success" %>
        <%= link_to "Delete my profile!", 'users/destroy', method: :delete, data:{ confirm: 'Are you sure?'}, :class => "btn btn-danger col-sm-offset-1" %>
      </div>
    <% end %>
  </div>
</div>

<div class="panel panel-default row">
  <div class="panel-heading">
    <h2 >Profile info</h2>
  </div>
  <div class="panel-body">
    <%= form_for @user, :html => {:class => "form-horizontal center"} , url: {action: "update"} do |f| %>
      <div class="form-group">
        <% if @user.image.url(:large).to_s !="/images/large/missing.png" %>
          <%= image_tag @user.image.url(:large), :class => "col-xs-4 col-xs-offset-4"  %>
        <% else %>
          <p class="sun-symbol"><%= @user.sun_sign.symbol %></p>
        <% end %>
      </div>
    
      <div class="form-group row">
        <%= f.label :image, nil, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.file_field :image %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :born_on, nil, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.date_field :born_on %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label "I'm a: ", nil, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
        <%= f.select(:gender) do %>
      	  <% [
      	  		['It doesn\'t matter','Doesn\'t Matter'],
      	  		['Male','Male'],
      	  		['Female','Female'], 
      	  		['Transgender', 'Transgender'],
      	  		['Other','Other']
      	  	].each do |c| -%>
      	    <%= content_tag(:option, c.first, value: c.last) %>
      	  <% end %>
        <% end %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label "Seeking a: " , nil, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
        <%= f.select(:desired_gender) do %>
      	  <% [
      	  		['It doesn\'t matter','Doesn\'t Matter'],
      	  		['Male','Male'],
      	  		['Female','Female'], 
      	  		['Transgender', 'Transgender'],
      	  		['Other','Other']
      	  	].each do |c| -%>
      	    <%= content_tag(:option, c.first, value: c.last) %>
      	  <% end %>
        <% end %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :zip_code, nil, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.number_field :zip_code, options = {:min =>501, :max=>99950, :placeholder =>"90305"} %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label "Height", nil, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.number_field :height_feet, options = {:min =>1, :max=>8, :placeholder =>"5"} %>
          <%=  "ft." %>
          <%= f.number_field :height_inches, options = {:min =>0, :max=>11, :placeholder =>"9"} %>
          <%=  "in." %>
          </div>
      </div>
  
      <div class="form-group row">
        <%= f.label "Title", nil, :class => 'col-sm-2 control-label' %>
        <div class ="col-sm-10">
          <%= f.text_field :profile_title %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label "info", nil, :class => 'col-sm-2 control-label' %>
        <div class ="col-sm-7">
          <%= f.text_area :profile_info , :class => "form-control input-md", :rows => 25 %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.submit :class => "btn btn-success col-sm-offset-2" %>
      </div>
    <% end %>
  </div>
</div>