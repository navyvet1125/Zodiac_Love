<h1>Messages</h1>
<div class="panel panel-default">
  <div class="panel-heading">
    <h2>New Message to <%= @receiver.user_name %></h2>
  </div>
  <div class="panel-body">


<%= form_for @message, :html => {:class => "form-horizontal center"} , url: {action: "create"} do |f| %>
	<%= f.hidden_field :sender_id, :value => @sender.id %>
	<%= f.hidden_field :receiver_id, :value => @receiver.id %>
	<div class="form-group">
		<%= f.label :title, nil, :class => 'col-sm-2 control-label' %>
		<div class="col-sm-10">
		<% if @title %>
			<%= f.text_field :title, :value => @title, :class => "form-control" %>
		<% else %>
			<%= f.text_field :title , :class => "form-control"%>
		<% end %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :message_body, nil, :class=>'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_area :message_body , :class => "form-control" %>
		</div>
	</div>
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit "Send", :class => "btn btn-success" %>
	</div>
<% end %>
</div>
<div class="panel-footer">
<%= link_to 'Back', :back %>
</div>
